<main class="signForm">
  <!-- Edit this -->
                      <!-- extra attribute required for file upload -->
<form class= "mdl-grid" method="post" action="/signup" enctype="multipart/form-data">
  <!-- Name -->
  <div class="mdl-cell--12-col _hidden reg regQ0 _visible">
    <label for="nameInput"> What is your name? </label><br>
    <input  id="nameInput" type="text" name="nameInput">
  </div>

  <!-- Gender -->
  <div class="mdl-cell--12-col _hidden reg regQ1">

    <label for="genderInput genderLessInput">
      What is your gender expression? </label><br>

    <div class="genderSliderNVal">
      <div class ="genderSliderBox">
      <input id="genderInput" type="range" name="genderInput" min="0" max="1"
      step="0.1" value="0.5"
      oninput="genderVal(this.value)" onchange="genderVal(this.value)">
        <p>fem <span></span>Androgynous<span></span>Mas</p>
      </div>
      <span class="genderVal"> 0.5</span>
    </div>

    <div class="genderCheckbox-box">
      <label class="mdl-checkbox mdl-js-checkbox" for="checkbox_gender">
          <input type="checkbox" id="checkbox_gender"
          name="genderLessInput" class="mdl-checkbox__input">
          <span class="mdl-checkbox__label genderlessLabel">Genderless / Agender</span>
       </label>
    </div>

  </div>

 <!-- UserName -->
  <div class="mdl-cell--12-col _hidden reg regQ2">
    <label for="usernameInput"> Username </label><br>
    <input  id="usernameInput" type="text" name="usernameInput">
  </div>

  <!-- Password -->
  <div class="mdl-cell--12-col _hidden reg regQ3">
    <label for="passwordInput"> Password </label><br>
    <input  id="passwordInput" type="password" name="passwordInput">
  </div>

  <!-- Photo -->
  <div class="mdl-cell--12-col _hidden reg regQ4">
    <input  id="photoUrl" type="file" name="userPhoto">
    <label for="photoUrl" id="photoLabel"><i class="material-icons">insert_photo</i><span>UPLOAD</span></label><br>
    <span class="description"><b style="font-size: 1.2em;">Please upload your face photo.</b>
    <br>It's only fair that you can view other members when they can see you too!</span>
    <!-- Maybe add dropbox feature-->
  </div>
  <i class="material-icons previousQBtn arrowBtn _hidden">arrow_upward</i>
  <i class="material-icons nextQBtn arrowBtn">arrow_downward</i>

  <!-- Final SubmitBtn -->
  <button class ='mdc-button mdc-button--raised _hidden reg regQ5 submitBtn' disabled autofocus> Sign Up </button>


</form>


<div class="signUpModal">
<!-- Button to trigger Modal-->
<button class="mdl-button mdl-js-button signupIntro" id="show-dialog" data-toggle="modal" data-target="#navIntro">
	To navigate
</button>

<!-- Modal -->
<dialog id="navIntro" class="mdl-dialog mdl-typography--text-center">
  <span class="close" style="color:white;">&times;</span>
  <div class="mdl-dialog__content">
    <p>You can navigate through sign up form using
      <i class="material-icons" style="font-weight: 700">arrow_upward</i> and
      <i class="material-icons" style="font-weight: 700">arrow_downward</i> buttons, or pressing
      <b>arrow keys</b> or <b>Enter key</b></p>
  </div>
</dialog>
</div>


</main>



